<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/grade1EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 1"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/grade2EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 2"
        android:layout_below="@id/grade1EditText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/grade3EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 3"
        android:layout_below="@id/grade2EditText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/grade4EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 4"
        android:layout_below="@id/grade3EditText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/grade5EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Grade 5"
        android:layout_below="@id/grade4EditText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grade5EditText"
        android:layout_centerHorizontal="true"
        android:text="Compute GPA"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
